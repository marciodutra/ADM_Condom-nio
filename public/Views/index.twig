{% extends "Layouts/layout.twig" %}

{% block title %}
    Condominium Imperium | Login
{% endblock title %}

{% block content %}
    
    <div class="container col-sm-12 col-12">

        <div id="boxLogin" class="wow bounceInUp rounded">

            <form action={{ appHost ~ 'login/request'}} method="post" id="frmLogin" name="frmLogin">
                <h5 class="text-center text-secondary">Condominium Imperium </h5>
                <h5 class="text-center" id="icon"><i class="fas fa-crown"></i></h5>
                <div class="form-group">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text text-info"><i class="far fa-user"></i></div>
                        </div>
                        <input type="text" class="form-control form-control-md" id="login" name="login" placeholder="Seu login" maxlenght="200" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text text-info"><i class="fas fa-key"></i></div>
                        </div>
                        <input type="password" class="form-control form-control-md" id="password" name="password" placeholder="Sua senha" maxlenght="200" required>
                    </div>
                </div>

                <button type="submit" class="btn btn-outline-success col-sm-12 col-12">Entrar</button>
                <p class="text-center">
                
                    <a href={{'forgot/password'}}>Esqueci minha senha</a>
                    
                </p>
                

            </form>

        </div>

    </div>
    
{% endblock content %}
